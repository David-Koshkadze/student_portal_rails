<h1>Admin Dashboard</h1>
<hr>

<%= link_to "Add Subject", new_subject_path %>
<br>
<%= link_to "Reports", "admin/reports" %>
<hr>

<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Description</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @subjects.each do |subject| %>
    <tr>
      <th scope="row"><%= subject.id %></th>
      <td><%= subject.name %></td>
      <td><%= subject.description %></td>
      <td>
        <div class="d-flex gap-2">
          <%= link_to "Details", subject_path(subject), class: "btn btn-outline-info btn-sm" %>
          <%= link_to "Edit", edit_subject_path(subject), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", subject_path(subject), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>